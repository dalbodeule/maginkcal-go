[Unit]
Description=EPD ICS Calendar Display Service
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/usr/local/bin/epdcal --config /etc/epdcal/config.yaml
WorkingDirectory=/var/lib/epdcal
User=pi
Group=pi
Restart=on-failure
RestartSec=5s

# 로그는 journalctl -u epdcal 로 확인
# 필요 시 환경 변수 파일을 추가해서 옵션을 오버라이드할 수 있다.
# 예)
# EnvironmentFile=-/etc/default/epdcal
# ExecStart=/usr/local/bin/epdcal $EPDCAL_FLAGS

[Install]
WantedBy=multi-user.target